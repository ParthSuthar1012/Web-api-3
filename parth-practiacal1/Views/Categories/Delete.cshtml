@model practical1.Models.Category


@{
    ViewData["Title"] = "Delete";
}

<div class="container d-flex justify-content-center">
    <div class="card" >
        <h5 class="card-header">Delete</h5>
        <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted">Are you sure you want to delete this?</h6>
            <hr />
            <h6 class="card-title">Category</h6>
            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-2">Description:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
                <dt class="col-sm-2">Is Active:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</dd>
                <dt class="col-sm-2">Created On:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedOn)</dd>
                <dt class="col-sm-2">Modified On:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ModifiedOn)</dd>
                <dt class="col-sm-2">Parent Category Id:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ParentCategoryId)</dd>
            </dl>
            <h3 class="card-text text-danger">If you delete the parent category, all child categories will be deleted.</h3>
            <form asp-action="Delete">
                <input type="hidden" asp-for="CategoryId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>

